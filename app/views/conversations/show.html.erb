<div class="flex items-center justify-center dark:text-white">
  <h1 class="text-2xl mr-1 inline-block">
    <%= @recipient.username %>
  </h1>
  <% if @recipient.pgp_set? %>
    <%= link_to pgp_conversation_path(@recipient.username) do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
      </svg>
    <% end %>
  <% end %>
</div>

<div class="overflow-hidden w-full h-full relative">
  <div class="flex h-full flex-1 flex-col">
    <main class="relative h-full w-full transition-width flex flex-col overflow-hidden items-stretch flex-1">
      <div class="w-full border-b dark:border-white/20 md:bg-vert-light-gradient bg-white dark:bg-gray-800 md:!bg-transparent dark:md:bg-vert-dark-gradient">
        <%= render 'messages/form', message: @new_message %>
      </div>

      <div class="flex-1 overflow-hidden">
        <div class="h-full overflow-y-auto">
          <div class="flex flex-col items-center text-sm h-full dark:bg-gray-800">
            <%= render @messages %>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
